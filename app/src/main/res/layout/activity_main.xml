<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#0a1c70">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sceneryButton"
        android:src="@drawable/scenery"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wildlifeButton"
        android:src="@drawable/crab"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/sceneryButton"
        android:layout_alignStart="@+id/sceneryButton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lookiloo"
        android:id="@+id/TitleText"
        android:layout_below="@+id/sceneryButton"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/wildlifeButton"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:singleLine="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="S c e n e r y"
        android:id="@+id/SceneryText"
        android:textColor="#98fd0000"
        android:textSize="20sp"
        android:layout_alignTop="@+id/sceneryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W i l d l i f e"
        android:id="@+id/wildlifeText"
        android:layout_below="@+id/TitleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:textColor="#afff0508"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
